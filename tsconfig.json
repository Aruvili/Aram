{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "package/src/**/*",
        "example/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "create-aram/template/**/*"
    ]
}